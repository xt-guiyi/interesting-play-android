<?xml version="1.0" encoding="utf-8"?>
<com.xtguiyi.loveLife.ui.videoPlayer.MyNestLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.videoPlayer.VideoPlayerActivity">
        <com.shuyu.gsyvideoplayer.video.NormalGSYVideoPlayer
            app:layout_scrollFlags="scroll|enterAlways"
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="245dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/TabItemTextStyle"
                android:layout_weight="1"
                app:tabRippleColor="@null"
                app:tabMinWidth="50dp"
                android:layout_width="0dp"
                android:layout_height="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="18dp"
                android:paddingStart="0dp"
                android:text="发弹幕占位"/>
        </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.xtguiyi.loveLife.ui.videoPlayer.MyNestLayout>