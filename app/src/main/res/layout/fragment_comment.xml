<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.videoPlayer.CommentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

    <LinearLayout
        android:id="@+id/comment_input_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
   >

        <EditText
            android:id="@+id/input_box"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_24"
            android:backgroundTint="@color/sliver_600"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:ems="10"
            android:paddingEnd="38dp"
            android:paddingBottom="8dp"
            android:gravity="start|top"
            android:hint="@string/comment_hint"
            android:textColorHint="@color/sliver_100"
            android:inputType="textMultiLine"
            android:textColor="@color/sliver_100"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emote_view"
            android:layout_marginStart="8dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/emote_icon"
            android:backgroundTint="@color/sliver_400" />
    </LinearLayout>
</FrameLayout>