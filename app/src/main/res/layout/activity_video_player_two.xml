<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.videoPlayer.VideoPlayerActivity">
    <!-- 视频区域   -->
    <FrameLayout
        android:id="@+id/video_player_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_behavior=".ui.videoPlayer.behaviors.VideoPlayBehavior">
        <com.shuyu.gsyvideoplayer.video.NormalGSYVideoPlayer
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </FrameLayout>
    <!-- 内容区域   -->
    <LinearLayout
        android:id="@+id/content"
        android:translationY="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior=".ui.videoPlayer.behaviors.ContentBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/TabItemTextStyle"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                app:tabMinWidth="50dp"
                app:tabRippleColor="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="18dp"
                android:text="发弹幕占位" />
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>