<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- tabLayout 样式   -->
    <style name="TabItemTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sliver_200</item>
    </style>

    <style name="TabItemSelectedTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green_300</item>
    </style>
    <!-- 图片样式    -->
    <style name="ImageRound" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ImageRound_4" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ImageRoundOnlyTop6" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
    </style>

    <style name="ImageCircle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- button 样式   -->
    <style name="ButtonNormalStyle" >
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRoundStyle" >
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/button_bg_24</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--activity 动画-->
    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/slider_in_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slider_out_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slider_in_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slider_out_right_exit</item>
    </style>

</resources>